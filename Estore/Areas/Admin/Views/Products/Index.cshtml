@model ManageProductsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Products</h2>
    </div>
    <div class="col-6 text-right ">
        <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-primary text-white">Create New Product</a>
    </div>
</div>

<form id="filter-form">
    <div class="col-12" style="height: 25px"></div>
    <div class="row">
        <div class="col-6">
            <h5 class="text-danger">Filters</h5>
        </div>
        <div class="col-6 text-right ">
            <button runat="server" type="submit" class="btn btn-primary text-white">Filter</button>
        </div>
        <div class="form-group">

        </div>
    </div>
    <div class="form-row">
        <div class="col form-group">
            <label asp-for="Filter.ProductId"></label>
            <input runat="server" id="filter-product-id" asp-for="Filter.ProductId" class="form-control" />
        </div>
        <div class="col form-group">
            <label asp-for="Filter.ProductName"></label>
            <input runat="server" asp-for="Filter.ProductName" class="form-control" />
        </div>
    </div>

    <div class="form-row">
        <div class="col form-group">
            @Html.CheckBoxFor(m => m.Filter.IsIncludePrice)
            <label class="text-primary"><b>Price</b></label> <br />
        </div>
        <div class="col form-group">
            @Html.CheckBoxFor(m => m.Filter.IsIncludeQuantity)
            <label class="text-primary"><b>Unit in stock</b></label> <br />
        </div>
    </div>

    <div class="form-row">
        <div class="col form-group">
            <label asp-for="Filter.MinPrice">From: </label>
            <input id="filter-min-price" asp-for="Filter.MinPrice" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col form-group">
            <label asp-for="Filter.MaxPrice">To: </label>
            <input id="filter-max-price" asp-for="Filter.MaxPrice" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col form-group">
            <label asp-for="Filter.MinQuantity">From: </label>
            <input asp-for="Filter.MinQuantity" type="number" class="form-control" />
        </div>
        <div class="col form-group">
            <label asp-for="Filter.MaxQuantity">To: </label>
            <input asp-for="Filter.MaxQuantity" type="number" class="form-control" />
        </div>
    </div>
</form>

<div class="col-12" style="height: 25px"></div>
<br />
<div class="p-4 border rounded">
    <table class="table table-striped table-bordered" id="tblData" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Weight</th>
                <th>Unit</th>
                <th><a asp-area="Admin" asp-controller="Product"></a></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script>
        let filter = @Json.Serialize(Model.Filter);
    </script>
    <script src="~/js/product/products.js"></script>
}
