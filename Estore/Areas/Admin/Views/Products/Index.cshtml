@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Products</h2>
    </div>
    <div class="col-6 text-right ">
        <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-primary text-white">Create New Product</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table class="table table-striped table-bordered" id="tblData" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Weight</th>
                <th>Unit</th>
                <th><a asp-area="Admin" asp-controller="Product"></a></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/product/products.js"></script>
}