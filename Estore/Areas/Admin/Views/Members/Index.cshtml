@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Members</h2>
    </div>
    <div class="col-6 text-right ">
        <a asp-area="Admin" asp-controller="Members" asp-action="Create" class="btn btn-primary text-white">Create New Member</a>
    </div>
</div>

<br />
<div class="p-8 border rounded">
    <table class="table table-striped table-bordered" id="tblData" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Name</th>
                <th>City</th>
                <th>Company</th>
                <th>Country</th>
                <th><a asp-area="Admin" asp-controller="Member"></a></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/member/members.js"></script>
}